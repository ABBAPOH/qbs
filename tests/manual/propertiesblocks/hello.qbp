import qbs.base 1.0

Product {
    Depends { name: 'cpp' }

    Properties {
        condition: true
        type: 'application'
        name: 'HelloWorld'
    }

    Properties {
        condition: name == 'HelloWorld'
        cpp.defines: ['SOMETHING']
    }

    Properties {
        condition: qbs.targetOS == "weird"
        cpp.staticLibraries: "abc"
    }

    Group {
       cpp.defines: outer.concat(['HAVE_MAIN_CPP', cpp.debugInformation ? '_DEBUG' : '_RELEASE'])
       files: ['main.cpp']
    }
}


